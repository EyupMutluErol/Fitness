@model Fitness.Models.UserSelectionViewModel
@{
    ViewData["Title"] = "Antrenör Adayları";
    Layout = "_AdminLayout";
}

<div class="row">
    <div class="col-md-10">
        <h2 class="text-primary">Antrenör Adayları Listesi</h2>
        <p class="lead">Listeden bir üyeyi seçerek Antrenör rolüne yükseltebilir ve mesleki profilini oluşturabilirsiniz.</p>
        <hr />

        <table class="table table-striped table-hover mt-3">
            <thead>
                <tr>
                    <th>Adı Soyadı</th>
                    <th>E-posta</th>
                    <th>İşlem</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Users != null && Model.Users.Any())
                {
                    @foreach (var user in Model.Users)
                    {
                        <tr>
                            <td>@user.FullName</td>
                            <td>@user.Email</td>
                            <td>
                                @* Seçilen kullanıcıyı, profil oluşturma formuna (AssignProfile) yönlendirir. *@
                                <a asp-controller="Admin" asp-action="AssignTrainerProfile" asp-route-userId="@user.Id" class="btn btn-sm btn-warning">
                                    Trainer Olarak Yükselt
                                </a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr><td colspan="3" class="text-center text-muted">Yükseltilecek aktif üye bulunmamaktadır.</td></tr>
                }
            </tbody>
        </table>
    </div>
</div>