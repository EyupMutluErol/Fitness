@model Fitness.Entities.Concrete.Trainer
@{
    ViewData["Title"] = "Trainer Profili Oluştur";
    Layout = "_AdminLayout";
}

<div class="row">
    <div class="col-md-6 offset-md-3">
        <h2 class="text-success">@Model.FirstName @Model.LastName için Profil Oluştur</h2>
        <hr />

        @* Bu, Rol Atama işleminden sonraki Business Logic hatalarını gösterir *@
        <div asp-validation-summary="All" class="text-danger"></div>

        @* Dosya yükleme (ProfileImageUrl) olduğu için enctype="multipart/form-data" zorunludur. *@
        <form asp-controller="Admin" asp-action="AssignTrainerProfile" method="post" enctype="multipart/form-data">

            @* Zorunlu Foreign Key'i (AppUserId) gizli input ile taşıyoruz *@
            <input type="hidden" asp-for="AppUserId" />

            @* FirstName ve LastName alanları sadece görünecek, düzenlenmeyecek *@
            <div class="mb-3">
                <label class="form-label">Üye Adı</label>
                <input asp-for="FirstName" class="form-control" readonly />
            </div>

            <div class="mb-3">
                <label class="form-label">Üye Soyadı</label>
                <input asp-for="LastName" class="form-control" readonly />
            </div>

            @* Uzmanlık Alanı (Zorunlu Alan) *@
            <div class="mb-3">
                <label asp-for="Specialization" class="form-label"></label>
                <input asp-for="Specialization" class="form-control" />
                <span asp-validation-for="Specialization" class="text-danger"></span>
            </div>

            @* Biyografi Alanı *@
            <div class="mb-3">
                <label asp-for="Bio" class="form-label"></label>
                <textarea asp-for="Bio" class="form-control"></textarea>
                <span asp-validation-for="Bio" class="text-danger"></span>
            </div>

            @* Profil Resmi Yükleme (IFormFile) *@
            <div class="mb-3">
                <label for="file" class="form-label">Profil Resmi Yükle</label>
                <input type="file" name="file" class="form-control" />
            </div>

            <div class="d-grid gap-2 mt-4">
                <button type="submit" class="btn btn-success">Rol Ata ve Profili Kaydet</button>
                <a asp-action="UpgradeList" class="btn btn-secondary">İptal</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @* İstemci tarafı doğrulamayı etkinleştirmek için *@
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}