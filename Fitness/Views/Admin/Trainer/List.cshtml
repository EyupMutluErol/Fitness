@model IEnumerable<Fitness.Entities.Concrete.Trainer>
@{
    ViewData["Title"] = "Antrenör Listesi";
    Layout = "_AdminLayout"; // Yan menüyü içerir.
}

<div class="row">
    <div class="col-md-12">
        <h2 class="text-primary">Antrenör Listesi</h2>
        <hr />

        @* Başarı ve Hata Mesajları *@
        @if (ViewBag.SuccessMessage != null)
        {
            <div class="alert alert-success">@ViewBag.SuccessMessage</div>
        }
        @if (ViewBag.ErrorMessage != null)
        {
            <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
        }

        <p>
            @* Yükseltme Adayları Listesine Yönlendirme *@
            <a asp-controller="Admin" asp-action="UpgradeList" class="btn btn-success">
                <i class="fas fa-user-plus"></i> Yeni Antrenör Adayı Yükselt
            </a>
        </p>

        <table class="table table-striped table-hover mt-3">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Adı Soyadı</th>
                    <th>Uzmanlık</th>
                    <th>E-posta</th> 
                    <th>Müsaitlik</th>
                    <th>Hesap ID</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var trainer in Model)
                {
                    <tr>
                        <td>@trainer.Id</td>
                        <td>@trainer.FirstName @trainer.LastName</td>
                        <td>@trainer.Specialization</td>
                        <td>@trainer.AppUser.Email</td> @* AppUser'dan e-posta çekildi *@
                        <td>@(trainer.Availabilities != null && trainer.Availabilities.Any() ? "Tanımlı" : "YOK")</td>
                        <td>@trainer.AppUserId</td>
                        <td>
                            @* Düzenleme Butonu *@
                            <a asp-controller="Admin" asp-action="TrainerEdit" asp-route-id="@trainer.Id" class="btn btn-sm btn-info text-white me-2">Düzenle</a>

                            @* Silme İşlemi (Form ile POST gönderir) *@
                            <form asp-controller="Admin" asp-action="TrainerDelete" asp-route-id="@trainer.Id" method="post" style="display:inline;" onsubmit="return confirm('Bu antrenörü silmek istediğinizden emin misiniz?');">
                                <button type="submit" class="btn btn-sm btn-danger">Sil</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>