@model IEnumerable<Fitness.Entities.Concrete.Service>
@{
    ViewData["Title"] = "Hizmet Listesi";
    Layout = "_AdminLayout";
}

<div class="row">
    <div class="col-md-12">
        <h2 class="text-primary">Hizmet Listesi</h2>
        <hr />

        @* Başarı ve Hata Mesajları *@
        @if (ViewBag.SuccessMessage != null)
        {
            <div class="alert alert-success">@ViewBag.SuccessMessage</div>
        }
        @if (ViewBag.ErrorMessage != null)
        {
            <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
        }

        <p>
            <a asp-controller="Admin" asp-action="ServiceCreate" class="btn btn-success">
                <i class="fas fa-plus"></i> Yeni Hizmet Ekle
            </a>
        </p>

        <table class="table table-striped table-hover mt-3">
            <thead>
                <tr>
                    <th>Hizmet Adı</th>
                    <th>Süre (dk)</th>
                    <th>Ücret</th>
                    <th>Antrenör Sayısı</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var service in Model)
                {
                    <tr>
                        <td>@service.Name</td>
                        <td>@service.DurationInMinutes</td>
                        <td>@service.Price.ToString("C2")</td>
                        <td>@(service.ServiceTrainers?.Count() ?? 0)</td>
                        <td>
                            <a asp-controller="Admin" asp-action="ServiceEdit" asp-route-id="@service.Id" class="btn btn-sm btn-info text-white me-2">Düzenle</a>
                            <form asp-controller="Admin" asp-action="ServiceDelete" asp-route-id="@service.Id" method="post" style="display:inline;" onsubmit="return confirm('Bu hizmeti silmek istediğinizden emin misiniz?');">
                                <button type="submit" class="btn btn-sm btn-danger">Sil</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>