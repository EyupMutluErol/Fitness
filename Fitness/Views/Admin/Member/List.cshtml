@model Fitness.Models.UserListViewModel
@{
    ViewData["Title"] = "Tüm Sistem Kullanıcıları";
    Layout = "_AdminLayout"; // Admin layoutu kullanır
}

<div class="row">
    <div class="col-md-12">
        <h2 class="text-primary">Tüm Kullanıcılar ve Rolleri</h2>
        <p class="lead">Sistemdeki Admin, Antrenör ve Üye kayıtları listelenmektedir.</p>
        <hr />

        @* Başarı ve Hata Mesajları için TempData'yı kullanabiliriz *@
        @if (ViewBag.SuccessMessage != null)
        {
            <div class="alert alert-success">@ViewBag.SuccessMessage</div>
        }

        <table class="table table-striped table-hover mt-3">
            <thead>
                <tr>
                    <th>Adı Soyadı</th>
                    <th>E-posta</th>
                    <th>Rol</th>
                    <th>Trainer Profil ID</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model.Users)
                {
                    <tr>
                        <td>@user.FullName</td>
                        <td>@user.Email</td>
                        <td>
                            @* Rolleri renklendirerek gösterir *@
                            <span class="badge @(user.Role.Contains("Admin") ? "bg-danger" : user.Role.Contains("Trainer") ? "bg-warning text-dark" : "bg-success")">
                                @user.Role
                            </span>
                        </td>
                        <td>
                            @* Trainer olanlar için profil ID'sini gösterir *@
                            @(user.TrainerProfileId > 0 ? user.TrainerProfileId.ToString() : "-")
                        </td>
                        <td>
                            @* İleride kullanıcı rolü düzenleme (Edit) butonu buraya gelir *@
                            <a asp-controller="Admin" asp-action="MemberEdit" asp-route-id="@user.Id" class="btn btn-sm btn-outline-info">Detay</a>
                            <form asp-controller="Admin" asp-action="MemberDelete" asp-route-id="@user.Id" method="post" style="display:inline;" onsubmit="return confirm('UYARI: Bu işlem kullanıcıyı ve tüm verilerini sistemden kalıcı olarak silecektir. Emin misiniz?');">
                                <button type="submit" class="btn btn-sm btn-danger">Sil</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>