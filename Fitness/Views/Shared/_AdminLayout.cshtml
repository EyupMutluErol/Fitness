@using Microsoft.AspNetCore.Identity
@using Fitness.Entities.Concrete
@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin Paneli</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">

    <style>
        #sidebar-wrapper {
            min-height: 100vh;
            width: 15rem;
            position: fixed;
        }

        #page-content-wrapper {
            min-width: 100vw;
            padding-left: 15rem;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom">
            <div class="container-fluid">
                <a class="navbar-brand text-primary fw-bold" asp-controller="Admin" asp-action="Index">FITNESS ADMIN</a>
                <div class="collapse navbar-collapse justify-content-end">
                    <ul class="navbar-nav ml-auto">
                        @if (SignInManager.IsSignedIn(User))
                        {
                            <li class="nav-item">
                                <form asp-controller="Account" asp-action="Logout" method="post" class="form-inline">
                                    <button type="submit" class="btn btn-sm btn-danger">
                                        <i class="fas fa-sign-out-alt"></i> Çıkış Yap (@User.Identity.Name)
                                    </button>
                                </form>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="d-flex" id="wrapper">

        <div class="bg-dark border-right text-white" id="sidebar-wrapper">
            <div class="sidebar-heading p-3 text-white fw-bold border-bottom">YÖNETİM MENÜSÜ</div>
            <div class="list-group list-group-flush">

                <a asp-controller="Admin" asp-action="Index" class="list-group-item list-group-item-action bg-dark text-white border-bottom">
                    <i class="fas fa-tachometer-alt"></i> Dashboard
                </a>

                <h6 class="mt-3 mb-1 ms-3 text-secondary">CRUD Yönetimi</h6>

                <a asp-controller="Admin" asp-action="TrainerList" class="list-group-item list-group-item-action bg-dark text-white">
                    <i class="fas fa-users-cog"></i> Antrenörler
                </a>

                <a asp-controller="Admin" asp-action="ServiceList" class="list-group-item list-group-item-action bg-dark text-white mt-2">
                    <i class="fas fa-dumbbell"></i> Hizmetler
                </a>

                <a asp-controller="Admin" asp-action="GymList" class="list-group-item list-group-item-action bg-dark text-white mt-2">
                    <i class="fas fa-building"></i> Salon Bilgileri
                </a>

                <h6 class="mt-3 mb-1 ms-3 text-secondary">Randevu İşlemleri</h6>
                <a asp-controller="Appointment" asp-action="Index" class="list-group-item list-group-item-action bg-dark text-white">
                    <i class="fas fa-calendar-check"></i> Tüm Randevular
                </a>
                <a asp-controller="Appointment" asp-action="PendingList" class="list-group-item list-group-item-action bg-dark text-white">
                    <i class="fas fa-exclamation-triangle"></i> Onay Bekleyenler
                </a>
            </div>
        </div>

        <div id="page-content-wrapper" class="flex-grow-1">
            <div class="container-fluid mt-4">
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>